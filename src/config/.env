# ========================================
# DIGITONTINE MOBILE - Configuration API
# ========================================

# URL de l'API Backend
# PRODUCTION (Render)
API_BASE_URL=https://digitontine-backend.onrender.com

# DÉVELOPPEMENT (Local - si vous testez en local)
# API_BASE_URL=http://localhost:5000

# Clé API (obligatoire pour toutes les requêtes)
API_KEY=digitontine_2025_secret_key_change_this_in_production

# Préfixe des routes API
API_PREFIX=/digitontine

# Timeout des requêtes (en ms)
API_TIMEOUT=30000

# Nombre de tentatives en cas d'échec
API_RETRY_ATTEMPTS=3

# Activer les logs en développement
ENABLE_API_LOGS=true

# Version de l'API
API_VERSION=v1